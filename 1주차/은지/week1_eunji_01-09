// 문제 : https://leetcode.com/problems/unique-paths/description/
/**
 * @param {number} m
 * @param {number} n
 * @return {number}
 */
var uniquePaths = function(m, n) {
    const moveRight=n-1;
    const moveDown=m-1;
    const sum=moveRight+moveDown;
    const maxNum=Math.max(moveRight,moveDown);
    const minNum=Math.min(moveRight,moveDown);
    
    let answer=1;
    for(let i=sum;i>maxNum;i--){
        answer*=i;
    }

    let mod=1;
    for(let i=minNum;i>=1;i--){
        mod*=i;
    }

    return answer/mod;
};
